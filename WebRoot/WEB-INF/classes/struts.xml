<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.objectFactory" value="spring"></constant>
	<!-- 中文编码 -->
	<constant name="struts.i18n.encoding" value="gbk"></constant>
	<!-- 主题 -->
	<constant name="struts.ui.theme" value="simple" />
	<!--
		将.action改为.do <constant name="struts.action.extension" value="do" />
	-->
	<!-- 自动重新加载 -->
	<constant name="struts.configuration.xml.reload" value="true"></constant>
	<!-- 国际化 -->
	<!--
		<constant name="struts.custom.i18n.resources"
		value="/i18n/application" />
	-->
	<constant name="struts.configuration.xml.reload" value="true"></constant>
	
	<package name="noel" extends="struts-default">				
		<action name="tblFwxx" class="tblFwxxBean">															
			<result name="goScce">/index.jsp</result>
			<result name="showInfo">/detail.jsp</result>
			<result name="loginScce">/login_form.jsp</result>
			<result name="loginError">/reg.jsp</result>
			<result name="login_form">/login_form.jsp</result>
			<result name="myFwxxInfo">/my.jsp</result>
			<result name="post">/post.jsp</result>
			<result name="updInfo">/upd.jsp</result>			
			<result name="list">/list.jsp</result>
			
		</action>				
	</package>	
	
</struts>
